<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css"
    integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <title>Flight Fare Prediction</title>
  <style>
    /* Resetting margin and padding */
    body,
    ul {
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
    }

    video {
      position: fixed;  /* Fix the video in place */
      top: 0;
      left: 0;
      width: 100vw;  /* Full viewport width */
      height: 100vh; /* Full viewport height */
      object-fit: cover;  /* Ensure the video covers the entire screen */
      z-index: -1;  /* Keep the video behind the content */
    }

    .fa-solid {
      color: #fff;
      padding-right: 10px;
    }

    /* Navbar styling */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #6a0dad;
      padding: 10px 20px;
      position: relative; /* Ensures navbar elements are stacked properly */
      z-index: 10; /* Higher z-index to keep it above the form container */
    }

    /* Logo styling */
    .logo {
      height: 50px;
      zoom: 10%;
      z-index: 20; /* Ensure logo is above other content */
    }

    .fa-solid {
      color: #fff;
      padding-right: 10px;
    }

    /* Navbar styling */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: rgba(106, 13, 173, 0.8);
      padding: 10px 20px;
      position: relative;
      z-index: 1;
    }

    .nav-links {
      display: flex;
      list-style: none;
    }

    .nav-links li {
      margin: 0 15px;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-size: 18px;
    }

    .nav-links a:hover {
      color: #227582;
    }

    /* Form Styling */
    .form-container {
      width: 50%;
      margin: 50px auto;
      padding: 20px;
      background-color: rgba(255, 255, 255, 0);
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0);
      position: relative;
      z-index: 1;
    }

    .form-container h1 {
      text-align: center;
      font-size: 24px;
      color: #6a0dad;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-size: 16px;
      font-weight: bold;
      display: block;
    }

    .form-row {
      display: flex;
      /* justify-content: space-between; */
      gap: 30px;
      width: 97.5%;
    }

    .form-row-1 {
      display: flex;
      /* justify-content: space-between; */
      gap: 30px;
      width: 100%;
    }

    .form-group {
      flex: 1;
      width: 100%;
    }

    .form-group select,
    .form-group input {
      width: 100%;
      padding: 8px;
      margin-top: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
    }

    .form-group.button-container {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .form-group button {
      padding: 10px 20px;
      font-size: 18px;
      background-color: #6a0dad;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .form-group button:hover {
      background-color: #5a0a9f;
    }

    .result {
      margin-top: 30px;
      text-align: center;
      font-size: 18px;
      font-weight: bold;
      color: #6a0dad;
    }

    .user-popup {
      position: absolute;
      top: 50px;
      right: 20px;
      background-color: #fff;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.077);
      display: none;
      z-index: 1000;
    }

    .user-popup a {
      color: #6a0dad;
      text-decoration: none;
      display: block;
      padding: 8px 0;
    }

    .user-popup a:hover {
      color: #227582;
    }

    /* Responsive design */
    @media (max-width: 768px) {
      .nav-links {
        flex-direction: column;
        align-items: flex-end;
      }

      .form-row {
        flex-direction: column;
        gap: 0;
      }
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <div class="logo">
      <img style="border-radius: 60%" src="/assets/logo.png" alt="Logo" />
    </div>
    <ul class="nav-links">
      <li><a href="/main">Home</a></li>
      <li><a href="/service">Services</a></li>
      <li><a href="/about-us">About Us</a></li>

      <% if (user) { %> <!-- Check if user is logged in -->
        <li><a href="javascript:void(0);" onclick="togglePopup()"><i class="fa-solid fa-user"></i><%= user.fullname %></a></li>
      <% } %>
    </ul>
  </nav>

  <video autoplay muted loop>
    <source src="/assets/flight.mp4" type="video/mp4">
  </video>

  <div class="main">
    <div class="form-container">
      <h1>Flight Fare Prediction</h1>
      <form method="POST">
        <div class="form-group">
          <label for="source">Source</label>
          <select id="source" name="source" required onchange="updateDestinationAndStops()">
            <option value="Banglore">Banglore</option>
            <option value="Delhi">Delhi</option>
            <option value="Mumbai">Mumbai</option>
          </select>
        </div>

        <div class="form-group">
          <label for="destination">Destination</label>
          <select id="destination" name="destination" required onchange="updateStopsAndHalts()">
            <option value="Delhi">Delhi</option>
            <option value="Banglore">Banglore</option>
            <option value="Hyderabad">Hyderabad</option>
          </select>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="departure-date">Departure Date</label>
            <input type="date" id="departure-date" name="departure-date" required>
          </div>
          <div class="form-group">
            <label for="arrival-date">Arrival Date</label>
            <input type="date" id="arrival-date" name="arrival-date" required>
          </div>
        </div>

        <div class="form-row-1">
          <div class="form-group">
            <label for="total-stops">Total Stops</label>
            <select id="slct1" name="total-stops" required onchange="updateHalts()">
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
            </select>
          </div>
          <div class="form-group">
            <label for="halt">Halt Place</label>
            <select id="slct2" name="halt">
              <!-- Halt options populated dynamically -->
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="airline">Airline</label>
          <select id="airline" name="airline" required>
            <option value="IndiGo">IndiGo</option>
            <option value="Air India">Air India</option>
            <option value="SpiceJet">SpiceJet</option>
          </select>
        </div>

        <div class="form-group button-container">
          <button type="submit">Submit</button>
        </div>
    <div class="result">
      {{ result }}
    </div>
  </form>
  </div>
</div>

  <!-- Popup for logout -->
  <% if (user) { %>
    <div class="user-popup" id="userPopup">
      <a href="/logout">Logout</a>
    </div>
  <% } %>

  <script>
    //Function for halt option
    const haltOptions = {
      "Delhi-Banglore-1": ["Agra", "Hyderabad"],
      "Delhi-Banglore-2": ["Lucknow-Mumbai", "Jaipur-Pune"],
      "Banglore-Delhi-1": ["Chennai", "Nagpur"],
      "Banglore-Delhi-2": ["Mumbai-Lucknow", "Pune-Jaipur"],
      "Mumbai-Hyderabad-1": ["Goa", "Gujrat"],
      "Mumbai-Hyderabad-2": ["Rajishtan-Delhi", "Pune-Gujrat"],
      "Delhi-Hyderabad-1": ["Lucknow", "Pune"],
      "Delhi-Hyderabad-2": ["Lucknow-Aayodha", "Aayodha-Rachi"],
    };

    function updateDestinationAndStops() {
      updateStopsAndHalts();
    }

    function updateStopsAndHalts() {
  const source = document.getElementById("source").value;
  const destination = document.getElementById("destination").value;
  const stops = document.getElementById("slct1").value;
  const halt = document.getElementById("slct2");
  const haltContainer = halt.closest(".form-group");

  halt.innerHTML = "<option value=''>Select Halt</option>";

  if (stops === "0") {
    // Hide or disable the "Halt Duration" field for 0 stops
    haltContainer.style.display = "none";
    halt.required = false;
  } else {
    // Show the "Halt Duration" field for 1 or more stops
    haltContainer.style.display = "block";
    halt.required = true;

    const routeKey = `${source}-${destination}-${stops}`;
    if (haltOptions[routeKey]) {
      haltOptions[routeKey].forEach(haltPoint => {
        const option = document.createElement("option");
        option.value = haltPoint.toLowerCase();
        option.textContent = haltPoint;
        halt.appendChild(option);
      });
    }
  }
}


    function updateHalts() {
      updateStopsAndHalts();
    }

    // Function to toggle the user popup visibility
    function togglePopup() {
      const popup = document.getElementById('userPopup');
      const isVisible = popup.style.display === 'block';
      // Toggle the display property
      popup.style.display = isVisible ? 'none' : 'block';
    }

    // Close the popup if the user clicks anywhere outside
    window.onclick = function(event) {
      const popup = document.getElementById('userPopup');
      if (!popup.contains(event.target) && !event.target.closest('a')) {
        popup.style.display = 'none';
      }
    };
  </script>
</body>

</html>
